-- A Lua Make System file

lfs = require 'lfs'

lfs.mkdir('build')
lfs.mkdir('build/joylol')
lfs.mkdir('build/joylol/core')
lfs.mkdir('build/core')
lfs.mkdir('t-joylol/tex/context/third/joyLoL/joylol')
lfs.mkdir('t-joylol/tex/context/third/joyLoL/joylol/core')
lfs.mkdir('build/joylol')
lfs.mkdir('install')
lfs.mkdir('install/joylol')

