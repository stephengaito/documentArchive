require 'lms.contextDoc'

ctxTargets = contextDoc.targets{
  mainDoc        = 'jParser.tex',
  docDir         = 'doc',
  lmsfileSubDirs = {
    'jcf',
    'jcoalg',
    'jsexp',
    'jrm',
  },
}

require 'lms.litProgs'

lpTargets = litProgs.targets(ctxTargets, {
  directories = {
    'joylol',
    'joylol',
  },
  autoGenerated = {
    cCodeFiles = {
      'jParser.c',
      'jParserLib.c',
    },
    lmsfileFiles = {
      'lmsfile',
    },
    cHeaderFiles = {
      'joylol/jParser.h',
      'joylol/jParser-private.h',
    },
    defaultFiles = {
      'jParser.joy',
    },
    cTestFiles = {
      'allCTests.c',
    },
    lmsfileFiles = {
      'lmsfile',
    },
  },
})




recurseTargets(ctxTargets)


