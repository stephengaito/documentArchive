#!/bin/bash

# This bash script sets up the Racket DiSimp package

diSimpDir=$HOME/.diSimp
racketDir=$diSimpDir/racket

raco pkg install doc-coverage

if [ -d $diSimpDir ]; then
  mkdir -p $racketDir/pkgs/diSimp/scribblings
  mkdir -p $racketDir/pkgs/racketLayer/scribblings
  cp -r pkgs $racketDir
  raco pkg install --link $racketDir/pkgs/racketLayer
  raco pkg install --link $racketDir/pkgs/diSimp
  raco setup racketLayer
  raco setup diSimp
else
  echo "Please setup the diSimplexLaTeX buildTool first"
fi

