-- A Lua Make System file

lfs = require 'lfs'

lfs.mkdir('build')
lfs.mkdir('build/joylol')
lfs.mkdir('install')
lfs.mkdir('install/joylol')

require 'lms.litProgs'

lpTargets = litProgs.targets{
  mainDoc  = 'crossCompilers.tex',
  docFiles = {
    'overview.tex',
    'code.tex',
    'ansic.tex',
    'ansicLua.tex',
    'pureLua.tex',
    'lua.tex',
    'words.tex',
    'conclusion.tex',
  },
  docDir    = 'doc',
}

require 'lms.joyLoL'

joylol.targets(lpTargets, {
  coAlgs = {
    'crossCompilers',
  },
  cHeaderFiles = {
    'joylol/crossCompilers.h',
    'joylol/crossCompilers-private.h',
  },
  cCodeFiles = {
    'crossCompilers.c',
  },
  coAlgLibs = {
    'jInterps',
  },
})

require 'lms.contests'

contests.targets(lpTargets, {
  testExecs = {
    'allCTests',
  },
  cHeaderFiles = {
    'joylol/crossCompilers.h',
    'joylol/crossCompilers-private.h',
  },
  cCodeFiles = {
    'crossCompilers.c',
  },
  testLibDirs = {
  },
  testLibs = {
    '<HOME>/.joylol/joylol/jInterps',
  },
})