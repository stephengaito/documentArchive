-- A Lua Make System file

lfs = require 'lfs'

lfs.mkdir('build')
lfs.mkdir('build/joylol')
lfs.mkdir('install')
lfs.mkdir('install/joylol')

require 'lms.litProgs'

litProgs.targets{
  mainDoc  = 'textsReadline.tex',
  docFiles = {
    'overview.tex',
    'code.tex',
    'lua.tex',
    'words.tex',
    'conclusion.tex',
  },
  srcFiles = {
    'joylol/textsReadline.h',
    'joylol/textsReadline-private.h',
    'textsReadline.c',
  },
  buildDir  = 'build',
  docDir    = 'doc',
  moduleDir = 'install',
}

require 'lms.joyLoL'

joylol.targets{
  coAlgs = {
    'textsReadline',
  },
  srcFiles = {
    'joylol/textsReadline.h',
    'joylol/textsReadline-private.h',
    'textsReadline.c',
  },
  coAlgLibs = {
    'jInterps',
    'texts',
  },
  buildDir = 'build',
}

require 'lms.contests'

contests.targets{
  testExecs = {
    'allCTests',
  },
  mainDoc = 'textsReadline.tex',
  docFiles = {
    'overview.tex',
    'code.tex',
    'lua.tex',
    'words.tex',
    'conclusion.tex',
  },
  srcFiles = {
    'joylol/textsReadline.h',
    'joylol/textsReadline-private.h',
    'textsReadline.c',
  },
  testLibDirs = {
  },
  testLibs = {
    '<HOME>/.joylol/joylol/naturals',
    '<HOME>/.joylol/joylol/dictionaries',
    '<HOME>/.joylol/joylol/texts',
    '-lreadline',
    '-lgmp',
  },
  buildDir  = 'build',
  docDir    = 'doc',
  moduleDir = 'install',
}