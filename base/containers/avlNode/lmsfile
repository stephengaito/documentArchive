  coAlgs = {
    'avlNode',
  },
  cHeaderFiles = {
    'joylol/avlNode.h',
    'joylol/avlNode-private.h',
  },
  cCodeFiles = {
    'avlNode.c',
  },
  joylolCodeFiles = {
  },
  coAlgLibs = {
    'jInterps',
  },
})

require 'lms.cTests'

cTests.targets(lpTargets, {
  testExecs = {
    'allCTests',
  },
  cHeaderFiles = {
    'joylol/avlNode.h',
    'joylol/avlNode-private.h',
  },
  cCodeFiles = {
    'avlNode.c',
  },
  testLibDirs = {
  },
  testLibs = {
