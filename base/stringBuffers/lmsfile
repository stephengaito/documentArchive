-- A Lua Make System file

lfs = require 'lfs'


require 'lms.litProgs'

lpTargets = litProgs.targets{
  mainDoc  = 'stringBuffers.tex',
  docFiles = {
    'overview.tex',
    'code.tex',
    'words.tex',
    'lua.tex',
    'conclusion.tex',
  },
  docDir    = 'doc',
}

require 'lms.joyLoL'

joylol.targets(lpTargets, {
  coAlgs = {
    'stringBuffers',
  },
  cHeaderFiles = {
    'joylol/stringBuffers.h',
    'joylol/stringBuffers-private.h',
  },
  cCodeFiles = {
    'stringBuffers.c',
  },
  coAlgLibs = {
    'jInterps',
    'symbols',
  },
})

require 'lms.contests'

contests.targets(lpTargets, {
  testExecs = {
    'allCTests',
  },
  cHeaderFiles = {
    'joylol/stringBuffers.h',
    'joylol/stringBuffers-private.h',
  },
  cCodeFiles = {
    'stringBuffers.c',
  },
  testLibDirs = {
  },
  testLibs = {
    '<HOME>/.joylol/joylol/jInterps',
  },
})