-- A Lua Make System file

require 'lms.litProgs'

lpTargets = litProgs.targets{
  mainDoc  = 'joylolMinus.tex',
  docFiles = {
    'joylolMinusOverview.tex',
    'joylolMinusObjects.tex',
    'joylolMinusSymbols.tex',
    'joylolMinusInterpreter.tex',
    'joylolMinusMain.tex',
    'joylolMinusConclusion.tex',
  },
  docDir    = 'doc',
}

require 'lms.c'

c.targets(lpTargets, {
  programs = {
    'joylolMinus',
  },
  cHeaderFiles = {
    'joylol/joylolMinus.h',
    'joylol/joylolMinus-private.h',
  },
  cCodeFiles = {
    'joylolMinus.c',
  },
})