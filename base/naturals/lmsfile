    'naturals.c',
  },
  testLibDirs = {
  },
  testLibs = {
    '<HOME>/.joylol/joylol/booleans',
    '<HOME>/.joylol/joylol/stringBuffers',
    '-lgmp',
  },
  buildDir  = 'build',
  docDir    = 'doc',
  moduleDir = 'install',
}