-- A Lua Make System file

lfs = require 'lfs'

lfs.mkdir('build')
lfs.mkdir('build/joylol')
lfs.mkdir('install')
lfs.mkdir('install/joylol')

require 'lms.litProgs'

litProgs.targets{
  mainDoc  = 'naturals.tex',
  docFiles = {
    'overview.tex',
    'code.tex',
    'words.tex',
    'lua.tex',
    'conclusion.tex',
  },
  srcFiles = {
    'joylol/naturals.h',
    'joylol/naturals-private.h',
    'naturals.c',
  },
  buildDir  = 'build',
  docDir    = 'doc',
  moduleDir = 'install',
}

require 'lms.joyLoL'

joylol.targets{
  coAlgs = {
    'naturals',
  },
  srcFiles = {
    'joylol/naturals.h',
    'joylol/naturals-private.h',
    'naturals.c',
  },
  coAlgLibs = {
    'jInterps',
  },
  buildDir = 'build',
}

require 'lms.contests'

